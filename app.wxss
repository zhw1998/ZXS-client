/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
view {
  box-sizing: border-box;
  height: auto;
}
text {
  font-family: 'HiraginoSansGB-W3';
}  
page {
  background: #f2f2f2;
}
image {
  width: 100%;
  height: auto;
}
.floatL {
  float: left;
}
.floatR {
  float: right;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}