/* pages/me/me.wxss */

.container {
  background: #f2f2f2;
  padding: 0;
  margin: 0
}
/*头部用户信息*/
.header{
  width: 100%;
  height: 300rpx;
  background:linear-gradient(to bottom,#1EE93F,rgb(4, 187, 120));
  position: relative
}
.name{
  font-size: 45rpx;
  color: white;
  position: absolute;
  left: 10%;
  top: 10%;
}
.img{
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius:50%;
  border: 1px solid white;
  position: absolute;
  left: 75%;
  top: 10%;
}
.title{
  font-size: 30rpx;
  color: white;
  position: absolute;
  left: 10%;
  top: 38%;
}

/*中间列表框*/
.middle{
  position: relative;
  width: 100%;
}
.listview1{
  position: absolute;
  width: 95%;
  height: 220rpx;
  background: white;
  border-radius:20rpx; 
  left: 2.5%;
  top: -110rpx;
  overflow: hidden;
}

.listview{
  position: absolute;
  width: 95%;
  height: 450rpx;
  background: white;
  top: 150rpx;
  left: 2.5%;
  overflow: hidden;
}

/*列表名字头部*/
.listview-top{
  display: flex;
  justify-content: space-between;
}
.list-name{
  margin-top:20rpx; 
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.list-more{
  font-size: 23rpx;
  color: rgb(151, 150, 150);
  margin-top: 21rpx; 
  margin-right: 20rpx;
}

/*按钮列表*/
.buttonview{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.button-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 25rpx;
  color:#777676;
  margin-bottom:30rpx; 
}

.buttonview image{
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-bottom:10rpx; 
}

/*列表*/
.table{
  width: 100%;
  margin-top: 70rpx;
  background: white;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap; 
  overflow: hidden;
  border-top: 1rpx solid #f0eeee;
}

.td{
  font-size: 28rpx;
  color:#777676;
  padding: 23rpx;
  border-bottom: 1rpx solid #f0eeee;
  border-right: 1rpx solid #f0eeee;
  width:50%; 
  display: flex;
}

.td image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.table-name{
  margin-top:8rpx; 
}