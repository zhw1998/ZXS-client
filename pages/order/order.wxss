.menu{
  background: #eee;
}
.header{
  display: flex;
  position: relative;
  align-items: center;
}
.myorder{
  font-size: 40rpx;
  margin-left: 15rpx;
}
.checkorder{
  font-size: 30rpx;
  color:#555;
  position: absolute;
  right: 10rpx;
}
.swiper-tab{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  border-bottom:  2rpx solid #ccc;
  text-align: center;
}
.swiper-tab-item{
  width: 20%;
  color:#434343b2;
  font-size: 28rpx;
  align-items: center;
}
.name{
  line-height: 100rpx;
}
.active{
  color: #0dd1ae;
  border-bottom:  2rpx solid #0dd1ae;
}
swiper{
  width: 100%;
  height: 1500rpx;
}
.order{
  width: 95%;
  height: 240rpx;
  margin-top: 10rpx;
  margin-left: 2.5%;
  background: #fff;
  border: 2px solid #efefef;
  font-size: 28rpx;
  color: #666;
  flex-direction: column;
  position: relative;
}
.header{
  height: 70rpx;
  background: -webkit-linear-gradient(left,#fff#0ffe,#fff);
  position: relative;
  font-size: 28rpx;
}
.header-order{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.orderimg{
  width: 60rpx;
  height: 60rpx;

}
.orderstate{
  position: absolute;
  right: 10rpx;
  color: red;
}
.orderdate{
  width: 400rpx;
  height: 100rpx;
  margin-left: 100rpx;
  font-size: 28rpx;
  margin-top: 15rpx;
}
.makeorderTime{
  position: relative;
  width: 600rpx;
}
.detail{
  position: absolute;
  margin-left: 50rpx;
  font-size: 24rpx;
}
.totalprice{
  margin-top: 10rpx;
  font-size: 28rpx;

}
.jiage{
  font-size: 20rpx;
  color: orange;
}
.totalprice-price{
  font-size: 28rpx;
  color: orange;
}
.order .gotopay{
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  color: #fff;
  background: #0dd1ae;
  position: absolute;
  bottom: 20rpx;
  right: 10rpx;
  font-size: 25rpx;
}