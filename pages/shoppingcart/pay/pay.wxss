.goodstotal{
  width: 100%;
  height: 60rpx;
  display: flex;
  font-size: 30rpx;
  margin-top: 10rpx;
  background: #fff;
  position: relative;
}
.peisongfei{
  width: 100%;
  height: 60rpx;
  display: flex;
  font-size: 30rpx;
  background: #fff;
  align-items: center;
  position: relative;
}
/* 商品总额 */
#gt{
  margin-left: 25rpx;
  padding-top: 5rpx;
}
#gt1{
  padding-top: 5rpx;
  position: absolute;
  right: 25rpx;
}
/* 配送费 */
#psf{
  margin-left: 25rpx;
  padding-bottom: 5rpx;
}
#psf1{
  padding-bottom: 5rpx;
  position: absolute;
  right: 25rpx;
}
/* 订单备注 */
.remark{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  background: #fff;
}
.orderremark{
  margin-left: 25rpx;
}
.inremark{
  margin-left: 5%;
  width: 90%;
  height: 200rpx;
  background: rgb(247, 245, 245);
  margin-top: 15rpx;
  margin-bottom: 15rpx; 
}
/* 支付功能 */
.pay{
  height: 100rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0px;
  border: 2rpx solid #eee;
  align-items: center;
  }
  .last{
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between
  }
  .waitpay{
    font-size: 30rpx;
    margin-left: 35rpx;
  }
  .sumprice{
    font-size: 28rpx;
    color: rgb(255, 115, 0);
  }
  /* 立即支付 */
  .spend{
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    background: rgb(31, 201, 59);
    color: #fff;
    right: 25rpx;
  }