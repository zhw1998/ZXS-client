/* pages/list/list.wxss */
.container {
  background: #f2f2f2;
  margin-top: 88rpx;
}
/* 搜索框 */
.search {
  background: #fff;
  position: fixed;
  z-index: 4;
  width: 100%;
  height: 88rpx;
  top:0;
  left: 0;
  display: flex; 
}
.district{
  margin-left:40rpx; 
  font-size: 30rpx;
  line-height: 82rpx;
  display: flex;
}
.district image{
  margin-top:24rpx; 
  width: 40rpx;
  height: 40rpx;
}
.searchWrap {
  width: 100%;
  height: 54rpx;
  margin: 15rpx 20rpx;
  background: #f2f2f2;
  border-radius: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
}
.searchInput{
  margin-left: 20rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  vertical-align: middle;
  color: #999999
}
.iconS{
  margin-top:15rpx; 
}

/* 菜单 */
.list{
  width: 100%;
  display: flex;
}
/* 左侧大类菜单栏 */
.list-left{
  width: 20%;
  font-size:28rpx;
  background: rgb(248, 248, 248);
  color:#777676;
  text-align: center;
}
